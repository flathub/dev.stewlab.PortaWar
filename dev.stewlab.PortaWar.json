{
    "app-id": "dev.stewlab.PortaWar",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "base": "org.godotengine.godot.BaseApp",
    "base-version": "3.5",
    "sdk": "org.freedesktop.Sdk",
    "command": "godot-runner",
    "modules": [
        {
            "name": "porta_war",
            "buildsystem": "simple",
            "build-commands": [
                "install -D porta-war.pck /app/bin/godot-runner.pck",
                "install -D LICENSE.txt /app/bin/LICENSE.txt"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "porta-war.pck"
                },
                {
                    "type": "file",
                    "path": "LICENSE.txt"
                }
            ]
        }
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri"
    ]
}